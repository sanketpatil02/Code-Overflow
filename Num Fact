
#include <stdio.h>

int main()
{
    int a;
    
    printf("Enter the Number for Factorial is ");
    scanf("%d",&a);
    
    printf("Factorial of %d = %d",a,factorial(5));
}

int factorial(int a) {
    if(a==0) {
        return 1;
    } else if (a==1) {
        return 1;
    }else {
        return a*factorial(a-1);
    }
}
